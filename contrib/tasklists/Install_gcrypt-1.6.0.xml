<?xml version="1.0" encoding="UTF-8"?>
<tasklist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../tasklist_schema.xsd" name="Install gcrypt-1.6.0">
  <options/>
  <sequence name="Stop if libgcrypt is already installed" enabled="true">
    <run name="Check if /usr/local/lib/libgcrypt.so.20 exits and stop if it does" id="1" enabled="true">
      <command>stat /usr/local/lib/libgcrypt.so.20</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>1</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
  </sequence>
  <sequence name="Check and install GCC if not present" enabled="true">
    <run name="Check and install gcc and make" id="1" enabled="true">
      <command>which gcc || sudo -S yum -y -t --nogpgcheck install gcc &amp;&amp; sudo -S yum -y -t --nogpgcheck install make</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
  </sequence>
  <sequence name="" enabled="true">
    <run name="Prepare build dir and download libgpg-error" id="1" enabled="true">
      <command>mkdir libgpg-error; cd libgpg-error; wget ftp://ftp.gnupg.org/gcrypt/libgpg-error/libgpg-error-1.12.tar.bz2</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
    <run name="Unbundle libgpg-error-1.12" id="2" enabled="true">
      <command>cd libgpg-error; tar xaf libgpg-error-1.12.tar.bz2</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
    <run name="Configure libgpg-error-1.12" id="3" enabled="true">
      <command>cd libgpg-error/libgpg-error-1.12; ./configure --prefix=/usr/local</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
    <run name="Compile and Install libgpg-error-1.12" id="4" enabled="true">
      <command>cd libgpg-error/libgpg-error-1.12; make &amp;&amp; sudo -S make install</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
  </sequence>
  <sequence name="Install libgcrypt-1.6.1" enabled="true">
    <run name="Prepare libgcrypt build dir and download source" id="1" enabled="true">
      <command>mkdir libgcrypt; cd libgcrypt; wget</command>
      <arguments>ftp://ftp.gnupg.org/gcrypt/libgcrypt/libgcrypt-1.6.1.tar.bz2</arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
    <run name="Unpack" id="2" enabled="true">
      <command>cd libgcrypt; tar xaf libgcrypt-1.6.1.tar.bz2</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
    <run name="Configure libgcrypt-1.6.1" id="3" enabled="true">
      <command>cd libgcrypt/libgcrypt-1.6.1; ./configure --prefix=/usr/local --with-libgpg-error=/usr/local</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
    <run name="Compile and install" id="4" enabled="true">
      <command>cd libgcrypt/libgcrypt-1.6.1; make &amp;&amp; sudo -S make install</command>
      <arguments></arguments>
      <timeout>0</timeout>
      <expected_return_code>0</expected_return_code>
      <expected_output></expected_output>
      <stop_on_fail>true</stop_on_fail>
    </run>
  </sequence>
</tasklist>
