<?xml version="1.0" encoding="UTF-8"?>
<tasklist name="Deploy GNUnet configuration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../tasklist_schema.xsd">
<sequence  enabled="true">
	<run id="0" name="check peer">
		<!-- Check if peer is working -->
        <command>sudo date</command> 
        <arguments></arguments> 
        <timeout>30</timeout>
        <expected_return_code>0</expected_return_code>
        <expected_output>2013</expected_output>
        <stop_on_fail>true</stop_on_fail>
	</run>
     <run id="0" name="remove old config">
		<!-- Remove -->
        <command>sudo rm</command> 
        <arguments>/home/tumple_gnunet/.gnunet/gnunet.conf</arguments> 
        <timeout>10</timeout>
        <expected_return_code>0</expected_return_code>
        <expected_output></expected_output>
        <stop_on_fail>false</stop_on_fail>
	</run>
     <run id="1" name="create directory">
		<!-- Remove -->
        <command>mkdir</command> 
        <arguments>/home/tumple_gnunet/.gnunet</arguments> 
        <timeout>10</timeout>
        <expected_return_code>-1</expected_return_code>
        <expected_output></expected_output>
        <stop_on_fail>false</stop_on_fail>
	</run>
     <run id="1" name="create directory">
		<!-- Remove -->
        <command>mkdir</command> 
        <arguments>/home/tumple_gnunet/logs</arguments> 
        <timeout>10</timeout>
        <expected_return_code>-1</expected_return_code>
        <expected_output></expected_output>
        <stop_on_fail>false</stop_on_fail>
	</run>	
	<put id="2" name="put gnunet.conf">
		<source>contrib/gnunet.conf</source>
		<destination>/home/tumple_gnunet/.gnunet/gnunet.conf</destination>
		<stop_on_fail>true</stop_on_fail>
	</put> 
</sequence>    	
</tasklist>

