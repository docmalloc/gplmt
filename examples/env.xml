<?xml version="1.0" encoding="utf-8"?>
<experiment>
  
  <description>Environment Variables</description>

  <targets>
    <target name="t1" type="local">
      <export-env var="FOO" value="$FOO" />
    </target>
    <target name="t2" type="ssh">
      <user>dold</user>
      <host>gnunet.org</host>
      <export-env var="BAR" value="$BAR" />
    </target>
  </targets>

  <tasklists>
    <tasklist name="test1">
      <run>echo "FOO: '$FOO' BAR: '$BAR'"</run>
    </tasklist>
  </tasklists>

  <steps>
    <step tasklist="test1" targets="t1 t2" />
  </steps>
</experiment>
