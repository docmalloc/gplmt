<?xml version="1.0" encoding="utf-8"?>
<experiment>
  
  <description>Demonstration of parallel feature</description>

  <target name="all-loc" type="group">
    <target name="loc1" type="local" />
    <target name="loc2" type="local" />
  </target>

  <tasklist name="tl">
    <parallel>
      <run>
        <command>bash -c "echo I am FOO $$ &amp;&amp; sleep 1"</command>
      </run>
      <run>
        <command>bash -c "echo I am BAR $$ &amp;&amp; sleep 1"</command>
      </run>
    </parallel>
    <run>
      <command>bash -c "echo END $$ &amp;&amp; sleep 1"</command>
    </run>
  </tasklist>

  <steps>
    <start-tasklist ref="tl" targets="all-loc" />
  </steps>

</experiment>
